font-face(name, style, url)
  font-family name
  font-style style
  src url(url)

@import "theme/colours-default"

@font-face
  font-face 'Homestead', 'Normal', '/font/Homestead-inline.ttf'
@font-face
  font-face 'Homestead-one', 'Normal', '/font/Homestead-one.ttf'
@font-face
  font-face 'Homestead-two', 'Normal', '/font/Homestead-two.ttf'
@font-face
  font-face 'Homestead-three', 'Normal', '/font/Homestead-three.ttf'

.header-container
  height 100vh
  margin 0
  position relative

  .masthead
    margin 0
    display block
    position absolute
    right 51%
    bottom 0
    text-align right

  nav
    position absolute
    top 25%
    left 51%

.main-container
  width 720px
  margin 0 auto
  

.tile
  a
    display block
    width w = 130px
    height w
    margin w*.1
    padding w*.01
    position relative
    text-decoration none
    background light
    color dark
    font 1.1em Homestead

    span
      position absolute
      bottom w*.1
      left w*.1

.masthead
  font 150px Homestead, mono
  color dark
  &::before,&::after
    content attr(text)
    position absolute
    top 0
    left 0
  &::before
    font-family Homestead-two
    color off
  &::after
    font-family Homestead-three
    color light
