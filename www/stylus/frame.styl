// Fonts mixin
font-url(file)
  return '/font/' + file

webfont(family, file, hack-chrome-windows = false, weight = 'normal')
  @font-face
    font-family family
    font-weight weight
    font-style normal
    src url(font-url(file + '.eot'))
    src url(font-url(file + '.eot?#iefix')) format('embedded-opentype'),
        url(font-url(file + '.woff2')) format('woff2'),
        url(font-url(file + '.woff')) format('woff'),
        url(font-url(file + '.ttf')) format('truetype'),
        url(font-url(file + '.svg#'+ family)) format('svg')
  if hack-chrome-windows
    @media screen and (-webkit-min-device-pixel-ratio:0)
      @font-face
        font-family family
        src url(font-url(file + '.svg#'+ family)) format('svg')

contentWidth = 780px

@import "theme/colours-default"

webfont('Novecento', 'Novecento/Novecentoslabwide-Normal-webfont', false)

body
  line-height 1.4em

.main
  h1,h2,h3,h4,h5,h6
    margin .5em 0 0
    border-bottom 1px solid dark

h1,h2,h3,h4,h5,h6
  color dark
  font-family 'Novecento', Serif
  line-height 1.6em
  a
    display block
    position relative
    margin-left 1em;
    text-decoration none
    color off
    &::before
      content "\000BB"
      position absolute
      left -1em
    &:hover
      color light

.header-container
  height 100vh
  margin 0
  position relative

  .masthead
    margin 10vh 0
    width 45vw
    display block
    position absolute
    right 51%
    bottom 0
    text-align right
    font-size 5vw
    line-height 8vw

  nav
    position absolute
    left 51%

.main
  width contentWidth
  min-height 100vh
  margin 0 auto

article
  display inline-block
  margin 0 30px

footer
  text-align center
  margin 20px auto 0

.column
  overflow auto
  .col
    padding 0 1em
    box-sizing border-box
    display block
    float left
  &.two
    .col
      width 50%
  &.three
    .col
      width 33.2%

.tile
  margin 7.5vh 0 10vh
  a
    display block
    width w = 30vw
    height 25vh
    margin 2.5vh 0 0
    position relative
    text-decoration none
    font 3vw Novecento
    border-top-right-radius 25px 50px
    border 1px solid dark
    color dark

    &:nth-child(1):hover
      background-image url("../../img/pattern1.png")
    &:nth-child(2):hover
      background-image url("../../img/pattern2.png")
    &:nth-child(3):hover
      background-image url("../../img/pattern3.png")

    span
      position absolute
      bottom w*.1
      left w*.1

.logo
  width 10vw

.split-background-line
  position: relative
  margin 40px 0
  &::before
    content ""
    display block
    width 0
    height 105%
    position absolute
    left 50%
    top -5%
    border-right 2px dashed dark
    opacity 0.35

a[href='#none']
  cursor default
  &:hover
    background inherit
