font-face(name, style, url)
  font-family name
  font-style style
  src url(url)

@import "theme/colours-default"

@font-face
  font-face 'Homestead', 'Normal', '/font/Homestead-inline.ttf'
@font-face
  font-face 'Homestead-one', 'Normal', '/font/Homestead-one.ttf'
@font-face
  font-face 'Homestead-two', 'Normal', '/font/Homestead-two.ttf'
@font-face
  font-face 'Homestead-three', 'Normal', '/font/Homestead-three.ttf'

.header-container
  margin 230px 0
  overflow hidden

  h1
    width 50%
    margin 0
    float left
    position relative
    display block
    text-align right

  nav
    width 50%
    float right

.main-container
  width 720px
  margin 0 auto
  

.tile
  a
    display block
    width w = 130px
    height w
    margin w*.1
    padding w*.01
    position relative
    text-decoration none
    background light
    color dark
    font 1.1em Homestead

    span
      position absolute
      bottom w*.1
      left w*.1

.masthead
  scale = 1900
  width (scale * 0.66)px
  position relative
  font (scale/10)px Homestead, mono
  color dark
  &::before,&::after
    content attr(text)
    position absolute
    top 0
    left 0
  &::before
    font-family Homestead-two
    color off
  &::after
    font-family Homestead-three
    color light
